# Server Configuration
PORT=8080
ENVIRONMENT=development
VERSION=1.0.0

# Database Configuration (localhost-friendly)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=ridehailing
DB_SSLMODE=disable
DB_MAX_CONNS=25
DB_MIN_CONNS=5

# Redis Configuration (localhost-friendly)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=24

# Service URLs (for inter-service communication)
PROMOS_SERVICE_URL=http://localhost:8089
ML_ETA_SERVICE_URL=http://localhost:8093

# OpenTelemetry Configuration (optional)
OTEL_ENABLED=true
OTEL_SERVICE_NAME=
OTEL_SERVICE_VERSION=1.0.0
OTEL_EXPORTER_OTLP_ENDPOINT=127.0.0.1:4317

# Sentry Error Tracking Configuration
# For self-hosted: SENTRY_DSN=http://[public-key]@localhost:9000/[project-id]
# For SaaS: SENTRY_DSN=https://[key]@o[org-id].ingest.sentry.io/[project-id]
SENTRY_DSN=
SENTRY_SAMPLE_RATE=1.0
SENTRY_TRACES_SAMPLE_RATE=1.0
SENTRY_DEBUG=false

# Self-Hosted Sentry Configuration (for Sentry server itself)
# Run ./scripts/setup-sentry.sh to generate this
SENTRY_SECRET_KEY=
# Email notifications (optional)
SENTRY_MAIL_HOST=
SENTRY_MAIL_PORT=587
SENTRY_MAIL_USERNAME=
SENTRY_MAIL_PASSWORD=
SENTRY_MAIL_USE_TLS=true
SENTRY_SERVER_EMAIL=sentry@ridehailing.local

# Stripe Configuration (Payments Service)
STRIPE_API_KEY=sk_test_51xxxxx...

# Firebase Configuration (Notifications Service - optional)
FIREBASE_PROJECT_ID=
FIREBASE_CREDENTIALS_PATH=
FIREBASE_ENABLED=false

# Twilio Configuration (Notifications Service - optional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# SMTP Configuration (Notifications Service - optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@richxcame.com
SMTP_FROM_NAME=RideHailing

# Circuit Breaker Configuration
CB_ENABLED=true
CB_FAILURE_THRESHOLD=5
CB_SUCCESS_THRESHOLD=1
CB_TIMEOUT_SECONDS=30
CB_INTERVAL_SECONDS=60

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT_LIMIT=120
RATE_LIMIT_DEFAULT_BURST=40
RATE_LIMIT_WINDOW_SECONDS=60

# Server Timeouts
READ_TIMEOUT=10
WRITE_TIMEOUT=10

# Timeout Configuration
HTTP_CLIENT_TIMEOUT=30              # HTTP client timeout in seconds (default: 30)
DB_QUERY_TIMEOUT=10                 # Database query timeout in seconds (default: 10)
REDIS_OPERATION_TIMEOUT=5           # Redis operation timeout in seconds (default: 5, fallback if read/write not set)
REDIS_READ_TIMEOUT=5                # Redis read timeout in seconds (default: 5)
REDIS_WRITE_TIMEOUT=5               # Redis write timeout in seconds (default: 5)
WS_CONNECTION_TIMEOUT=60            # WebSocket connection timeout in seconds (default: 60)
DEFAULT_REQUEST_TIMEOUT=30          # Default HTTP request timeout in seconds (default: 30)
ROUTE_TIMEOUT_OVERRIDES=            # Optional: JSON map of route-specific timeouts (e.g., '{"POST:/api/v1/rides": 60, "GET:/api/v1/analytics/reports": 120}')

# Google Pub/Sub Configuration (optional)
PUBSUB_PROJECT_ID=
PUBSUB_ENABLED=false
